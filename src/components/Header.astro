---
const places = [
	{
		name: "Home",
		path: "/",
		emoji: "üè†",
	},
	{
		name: "Projects",
		path: "/projects",
		emoji: "üóÉÔ∏è",
	},
	{
		name: "Blog",
		path: "/blog",
		emoji: "üìù",
	},
	{
		name: "Uses",
		path: "/uses",
		emoji: "üíª",
	},
];

import { SITE_TITLE, SITE_TITLE_SHORT } from "../consts";
---

<header>
	<h1 id="site-title">{SITE_TITLE}</h1>
	<h1 id="site-title-short">{SITE_TITLE_SHORT}</h1>
	<nav>
		{
			places.map((place) => (
				<a href={place.path} rel="prefetch-intent" aria-label={place.name}>
					{`${place.emoji} ~${place.path}`}
				</a>
			))
		}
	</nav>
</header>

<style>
	header {
		width: 100%;
		background: var(--base-above);
		display: flex;
		justify-content: space-between;
		padding: 1rem;
		border-bottom: 1px solid var(--accent);
	}

	h1 {
		margin: auto 0;
		font-size: 2rem;
		line-height: 1;
	}

	#site-title-short {
		display: none;
	}

	nav {
		display: flex;
		flex-wrap: wrap;
		justify-content: right;
		align-items: center;
		padding: 0 2rem;
		gap: 1rem;
	}

	nav a {
		background: var(--base-above-above);
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		color: var(--text);
		text-decoration: none;
		white-space: nowrap;
		transition-timing-function: cubic-bezier(0.2, 0, 0.2, 1);
		transition:
			filter 0.2s,
			transform 0.15s;
	}

	a:hover {
		filter: brightness(1.1);
	}

	nav a:active {
		transform: scale(0.88);
	}

	@media (max-width: 125ch) {
		header {
			flex-direction: column;
			align-items: center;
			gap: 1rem;
		}

		h1 {
			text-align: center;
		}

		nav {
			padding: 0 0.5rem;
			justify-content: center;
		}
	}

	/* I think I prefer the longer title for now, keeping this if I want it to be swapped out later */
