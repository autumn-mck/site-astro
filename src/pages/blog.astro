---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import "../styles/text.css";
import PostPreview from "../components/PostPreview.astro";

const posts = (await getCollection("blog")).sort(
	(a, b) =>
		(b.data.published?.valueOf() ?? 0) - (a.data.published?.valueOf() ?? 0)
);

const years: number[] = [];
posts.forEach((post) => {
	if (
		post.data.published &&
		!years.includes(post.data.published.getFullYear())
	) {
		years.push(post.data.published.getFullYear());
	}
});
---

<Layout title="Blog" description="Blog posts">
	<main>
		<section>
			{
				years.map((year) => (
					<>
						<h2>{year}'s posts</h2>
						<ul>
							{posts
								.filter((post) => post.data.published?.getFullYear() === year)
								.map((post) => (
									<li>
										<PostPreview post={post} />
									</li>
								))}
						</ul>
					</>
				))
			}

			<h2>Other posts</h2>
			<ul>
				{
					posts
						.filter((post) => !post.data.published)
						.map((post) => (
							<li>
								<PostPreview post={post} />
							</li>
						))
				}
			</ul>
		</section>
	</main>

	<style>
		main {
			margin: 1rem auto;
			width: 95ch;
			background: var(--base);
			border: 1px solid var(--accent);
			border-radius: 0.5rem;
		}

		@media screen and (max-width: calc(95ch + 2rem)) {
			main {
				width: calc(100% - 4vw);
				margin-left: 2vw;
				margin-right: 2vw;
			}
		}

		ul {
			list-style: none;
			padding: 0;
			margin: 0;
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			align-content: start;
			gap: 1rem;
			margin: 1rem;
		}

		li {
			flex: 1 1 20rem;
			max-width: calc(50% - 0.5rem);
		}

		@media screen and (max-width: 35rem) {
			li {
				max-width: 100%;
			}
		}
	</style>
</Layout>
