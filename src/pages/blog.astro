---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import "../styles/text.css";
import PostPreview from "../components/PostPreview.astro";

const posts = (await getCollection("markdownPosts"))
	.sort((a, b) => compareByPublishDate(a, b))
	.filter((post) => post.data.public);

const years: number[] = [];
posts.forEach((post) => {
	if (yearNotYetAdded(years, post)) {
		years.push(post.data.published!.getFullYear());
	}
});

export function compareByPublishDate(a: any, b: any) {
	return (b.data.published?.valueOf() ?? 0) - (a.data.published?.valueOf() ?? 0);
}

function yearNotYetAdded(years: number[], post: any) {
	return post.data.published && !years.includes(post.data.published.getFullYear());
}
---

<Layout title="Blog" description="Blog posts">
	<main>
		{
			years.map((year) => (
				<>
					<h1>{year}'s posts</h1>
					<ul>
						{posts
							.filter((post) => post.data.published?.getFullYear() === year)
							.map((post) => (
								<li>
									<PostPreview post={post} />
								</li>
							))}
					</ul>
					<hr />
				</>
			))
		}

		<h1>Other posts</h1>
		<ul>
			{
				posts
					.filter((post) => !post.data.published)
					.map((post) => (
						<li>
							<PostPreview post={post} />
						</li>
					))
			}
		</ul>
	</main>

	<style>
		main {
			margin: 1rem auto;
			width: 95ch;
			background: var(--base);
			border: 1px solid var(--accent);
			border-radius: 0.5rem;
		}

		@media screen and (max-width: calc(95ch + 2rem)) {
			main {
				width: calc(100% - 4vw);
				margin-left: 2vw;
				margin-right: 2vw;
			}
		}

		ul {
			list-style: none;
			padding: 0;
			margin: 0;
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			align-content: start;
			gap: 1rem;
			margin: 1rem;
		}

		li {
			flex: 1 1 20rem;
			max-width: calc(50% - 0.5rem);
			background: var(--base-above);
		}

		@media screen and (max-width: 35rem) {
			li {
				max-width: 100%;
			}
		}
	</style>
</Layout>
